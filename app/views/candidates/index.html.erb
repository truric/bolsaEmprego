<%# divise helper if logged in and if admin = CRUD is visible %>

<h1>Candidates CRUD visible to admin</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Industry</th>
      <th>Employed</th>
      <th>Grade</th>
      <th>Qualification</th>
      <th>Experience</th>
      <th>Address</th>
      <th>County</th>
      <th>Phone</th>
      <th>Fax</th>
      <th>Email</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @candidates.each do |candidate| %>
      <tr>
        <td><%= candidate.name %></td>
        <td><%= candidate.description %></td>
        <td><%= candidate.industry %></td>
        <td><%= candidate.employed %></td>
        <td><%= candidate.grade %></td>
        <td><%= candidate.qualification %></td>
        <td><%= candidate.experience %></td>
        <td><%= candidate.address %></td>
        <td><%= candidate.county %></td>
        <td><%= candidate.phone %></td>
        <td><%= candidate.fax %></td>
        <td><%= candidate.email %></td>
        <td><%= link_to 'Show', candidate %></td>
        <td><%= link_to 'Edit', edit_candidate_path(candidate) %></td>
        <td><%= link_to 'Destroy', candidate, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

