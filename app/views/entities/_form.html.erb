    </div>
  <% end %>

  <div class="field">
    <%= e.input :name %>
  </div>

  <div class="field">
    <%= e.input :description %>
  </div>

  <div class="field">
    <%= e.input :industry %>
  </div>

  <div class="field">
    <%= e.input :address %>
  </div>

  <div class="field">
    <%= e.input :county %>
  </div>

  <div class="field">
    <%= e.input :phone %>
  </div>

  <div class="field">
    <%= e.input :fax %>
  </div>

  <div class="field">
    <%= e.input :website %>
  </div>

  <div class="actions">
    <%= e.button :submit %>
  </div>
  
<% end %>
