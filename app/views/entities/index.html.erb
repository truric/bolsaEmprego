<% @entities.each do |entity| %>
  <div class="row">
    <div class="col-sm-2">
      <div class="card border-0">
        <div class="card-body">
          <div style="display: flex; justify-content: left; align-items: left; margin-top: 15px">
          <% if entity.image.attached? %>
              <%= image_tag(entity.image, style: "width: 100px") %>
          <% else %>
            <img src="image" alt="sem imagem">
          <% end %>
          </div>
        </div>
      </div>
    </div>
    <div class="col-sm-2" style="margin-left: -150px">
      <div class="card border-0">
        <div class="card-body">
          <p class="card-text"><%= link_to entity.name, entity_path(entity.id), style:"color: blue; visited: yellow", class:"noHover"%></p>
          <p class="card-text"><%= raw entity.description %></p>
        </div>
      </div>
    </div>

    <div style="display: flex; justify-content: left; align-items: left; margin-top: 15px;">
      <div "actions">
      <% if user_signed_in? %>
        <% if user_signed_in? && current_user.role == "candidate" %>
          <button><%= link_to 'Interessado/a', new_user_registration_path(role:"entity"), style:"text-decoration: none; color: black", class:"noHover" %></button>
        <% end %>
        <% if current_user.role == "backoffice" || current_user.role == "entity" && current_user.entity.id == entity.id %>
          <button><%= link_to 'Editar', edit_entity_path(entity), style:"text-decoration: none; color: black", class:"noHover" %></button>
          <td><%= link_to 'Cancelar', entity, method: :delete, data: { confirm: 'Tem a certeza?' } %></td>
        <% end %>
      <% end %>
      </div>
    </div>
    
  </div>
<% end %>

<% if user_signed_in? == false %>
  <%= link_to 'Quero-me registar', new_user_registration_path(role:"entity"), style:"color: blue", class:"noHover" %>
<% end %>

<%= will_paginate @entities, style:"margin-top: 35px; color: blue", class:"noHover btn" %>

