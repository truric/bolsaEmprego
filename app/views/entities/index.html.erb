<%= render 'components/entities_list' %>

<h1>Entities CRUD visible to user admin</h1>

<table>
   <thead>
     <tr>
       <th>Name</th>
       <th>Description</th>
       <th>Industry</th>
       <th>Address</th>
       <th>County</th>
       <th>Phone</th>
       <th>Fax</th>
       <th>Website</th>
       <th>Email</th>
       <th colspan="3"></th>
     </tr>
   </thead>

   <tbody>
     <% @entities.each do |entity| %>
       <tr>
         <td><%= entity.name %></td>
         <td><%= entity.description %></td>
         <td><%= entity.industry %></td>
         <td><%= entity.address %></td>
         <td><%= entity.county %></td>
         <td><%= entity.phone %></td>
         <td><%= entity.fax %></td>
         <td><%= entity.website %></td>
         <td><%#= entity.user.email %></td>
         <%= entity.inspect %>
         <td><%= link_to 'Show', entity %></td>
         <td><%= link_to 'Edit', edit_entity_path(entity) %></td>
         <td><%= link_to 'Destroy', entity, method: :delete, data: { confirm: 'Are you sure?' } %></td>
       </tr>
     <% end %>
   </tbody>
 </table>

