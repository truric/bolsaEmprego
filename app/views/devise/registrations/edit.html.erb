<h3 style="margin-top: 5px">Alterar Password</h2>

<h7 style="font-weight: bold">Nome</h7><br>
<%= resource_name.to_s.humanize %>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>

  <div class="field" style="margin-top: 15px">
    <%= f.label "Password Atual", style:"font-weight: bold" %>
    <%= f.password_field :current_password, autocomplete: "current-password" %>
  </div>

  <div class="field">
    <%= f.label "Password", style:"font-weight: bold" %>
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label "Confirmação Password", style:"font-weight: bold" %>
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="actions">
    <%= f.submit "Ok" %>
    <%= f.button :button do %>
      <%= link_to 'Cancelar', new_user_session_path, style:"text-decoration: none; border-radius: 25px; color: black; pointer-events: none" %>
  <% end %>

<% end %>

<% if user_signed_in? && current_user.role == "backoffice" %>

  <h3 style="margin-top: 25px">Cancelar conta</h3>

  <p><%= button_to "Cancelar", registration_path(resource_name), data: { confirm: "Tem a certeza?" }, method: :delete %></p>

<% end %>