<h2>Nova Entidade</h2>

  <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= f.hidden_field :role, :value => params[:role] %>


    <div class="topnav" style="float: right; border-radius: 15px">
      <svg style="position: absolute; padding-left:6px; padding-top:6px" xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-search" viewBox="0 0 16 16">
        <path d="M11.742 10.344a6.5 6.5 0 1 0-1.397 1.398h-.001c.03.04.062.078.098.115l3.85 3.85a1 1 0 0 0 1.415-1.414l-3.85-3.85a1.007 1.007 0 0 0-.115-.1zM12 6.5a5.5 5.5 0 1 1-11 0 5.5 5.5 0 0 1 11 0z"/>
      </svg>
      <input type="text" placeholder="     search">
    </div> 

    <%= render "devise/shared/error_messages", resource: resource %>
  
    <form class="row g-3">

    <div class="col-12">
      <div class="col-2">
        <%= f.label :email %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", :value => "asd@asd.com" %>
      </div>
    </div>
  
    <div class="form-group row" style="margin-top: 15px">
      <div class="col-2" >
        <%= f.label :password %>
        <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> characters minimum)</em>
        <% end %><br />
        <%= f.password_field :password, autocomplete: "new-password", :value => "password", style:"width: 107%" %>
      </div>
  
      <div class="col-3" style="padding-left: 90px">
        <%= f.label :password_confirmation %>
        <em>(repeat password)</em><br />
        <%= f.password_field :password_confirmation, autocomplete: "new-password", :value => "password", style:"width: 100%" %>
      </div>
    </div>
  
    <%= f.simple_fields_for :entity do |e| %>

      <div class="form-group row" style="margin-top: 15px">
        <div class="col-2" >
          <%= e.label :name %>
          <%= e.text_field :name, :value => "entity name", style:"width: 107%" %>
        </div>

        <div class="col-3 " style="padding-left: 90px">
          <%= e.label :image %>
          <%= e.file_field :image, class: "form-control" %>
        </div>
      </div>


      <div class="form-group col-5" style="margin-top: 15px">
        <label for="exampleFormControlTextarea1">Morada</label>
        <%= tinymce %>
        <%= text_area_tag :address, "", :class => "tinymce", :rows => 3, :cols => 98 %>
      </div>

      <div class="form-group row" style="margin-top: 15px">
        <div class="col-1" >
          <%= e.label :postal_code %>
          <%= e.number_field :postal_code, :value => 4445-454, style:"width: 107%" %>
        </div>

        <div class="col-3" style="padding-left: 240px">
          <%= e.label :location %>
          <%= e.text_field :location, :value => "Maia", style:"width: 100%" %>
        </div>
      </div>

      <div class="form-group row" style="margin-top: 15px">
        <div class="col-1" >
          <%= e.label :phone %>
          <%= e.text_field :phone, :value => 2311232323, style:"width: 107%" %>
        </div>

        <div class="col-1" >
          <%= e.label :fax %>
          <%= e.number_field :fax, :value => 3232323232, style:"width: 107%" %>
        </div>

        <div class="col-3" style="padding-left: 80px">
          <%= e.label :website %>
          <%= e.text_field :website, :value => "www.site.com", style:"width: 100%" %>
        </div>
      </div>

      <div class="form-group row" style="margin-top: 15px">
        <div class="col-1" >
          <%= e.label :tax_number %>
          <%= e.text_field :tax_number, :value => 55505050 %>
        </div>
      </div>

      <div class="col-3 dropdown" style="margin-top: 35px">
        <%= e.label "Actividade Profissional" %>
        <%= e.select :industry, [['Web Design','Web Design'],['Banking','Banking'],['Cyber Security','Cyber Security']] %>
      </div>

      <div class="form-group col-5" style="margin-top: 25px; margin-bottom: 25px">
        <label for="exampleFormControlTextarea1">Apresentação</label>
        <%= tinymce %>
        <%= text_area_tag :address, "", :class => "tinymce", :rows => 3, :cols => 98 %>
     </div>



    <% end %>

  <div class="actions">
    <%= f.submit "Registar" %>
  </div>

  <% end %>