<h1>Job Offers visible to user admin</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Date</th>
      <th>Company</th>
      <th>County</th>
      <th>Industry</th>
      <th>Contract</th>
      <th>Salary</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @job_offers.each do |job_offer| %>
      <tr>
        <td><%= job_offer.name %></td>
        <td><%= job_offer.description %></td>
        <td><%= job_offer.date %></td>
        <td><%= job_offer.company %></td>
        <td><%= job_offer.county %></td>
        <td><%= job_offer.industry %></td>
        <td><%= job_offer.contract %></td>
        <td><%= job_offer.salary %></td>
        <td><%= link_to 'Show', job_offer %></td>
        <td><%= link_to 'Edit', edit_job_offer_path(job_offer) %></td>
        <td><%= link_to 'Destroy', job_offer, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

